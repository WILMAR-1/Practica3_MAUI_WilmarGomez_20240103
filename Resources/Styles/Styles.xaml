<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Terminal Colors -->
    <Color x:Key="TerminalGreen">#00FF41</Color>
    <Color x:Key="TerminalBlack">#000000</Color>
    <Color x:Key="TerminalWhite">#FFFFFF</Color>

    <!-- Base Style for all Pages -->
    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource TerminalBlack}" />
    </Style>

    <!-- Navigation Bar Style -->
    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource TerminalBlack}" />
        <Setter Property="BarTextColor" Value="{StaticResource TerminalGreen}" />
    </Style>

    <!-- General Control Styles -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TerminalGreen}" />
        <Setter Property="FontFamily" Value="Minecraft" />
        <Setter Property="FontSize" Value="16" />
    </Style>
    
    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TerminalGreen}" />
        <Setter Property="FontFamily" Value="KarmaticArcade" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TerminalBlack}" />
        <Setter Property="BackgroundColor" Value="{StaticResource TerminalGreen}" />
        <Setter Property="FontFamily" Value="Minecraft"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="MinimumHeightRequest" Value="48"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TerminalGreen}" />
        <Setter Property="BackgroundColor" Value="{StaticResource TerminalBlack}" />
        <Setter Property="FontFamily" Value="Minecraft"/>
        <Setter Property="FontSize" Value="16" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TerminalGreen}" />
        <Setter Property="MinimumHeightRequest" Value="48"/>
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource TerminalGreen}" />
        <Setter Property="TitleColor" Value="{StaticResource TerminalGreen}" />
        <Setter Property="BackgroundColor" Value="{StaticResource TerminalBlack}" />
        <Setter Property="FontFamily" Value="Minecraft"/>
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinimumHeightRequest" Value="48"/>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{StaticResource TerminalGreen}" />
        <Setter Property="BackgroundColor" Value="{StaticResource TerminalBlack}" />
        <Setter Property="FontFamily" Value="Minecraft"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="MinimumHeightRequest" Value="48"/>
    </Style>
    
    <Style TargetType="Frame">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderColor" Value="{StaticResource TerminalGreen}" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BackgroundColor" Value="{StaticResource TerminalBlack}" />
    </Style>

    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource TerminalGreen}" />
        <Setter Property="ThumbColor" Value="{StaticResource TerminalGreen}" />
    </Style>

    <Style TargetType="Border" x:Key="InputBorderStyle">
        <Setter Property="Stroke" Value="{StaticResource TerminalWhite}" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="BackgroundColor" Value="{StaticResource TerminalBlack}" />
        <Setter Property="Padding" Value="10,0" />
    </Style>

</ResourceDictionary>
